@page "/forgotpassword/"
@model ForgotPasswordModel
@{
    Layout = "/Views/Shared/Admin/_LoginLayout.cshtml";
    ViewData["Title"] = "Quên mật khẩu?";
}

<div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
<div class="col-lg-6">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-2">@ViewData["Title"]</h1>
            <p class="mb-4">
                Nhập địa chỉ email của bạn xuống dưới và chúng tôi sẽ gửi đường dẫn để đặt lại mật khẩu cho bạn!
            </p>
        </div>
        <form class="user" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" type="email" class="form-control form-control-user"
                       id="exampleInputEmail" aria-describedby="emailHelp"
                       placeholder="Nhập địa chỉ email...">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">
                Đặt lại mật khẩu
            </button>
        </form>
        <hr>
        <div class="text-center">
            <a asp-page="./Register" class="small" >Tạo tài khoản ngay!</a>
        </div>
        <div class="text-center">
            <a asp-page="./Login" class="small" >Đã có tài khoản? Đăng nhập ngay!</a>
        </div>
    </div>
</div>

